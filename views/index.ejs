<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>URL Shortener</title>
  </head>
  <body>
    <div class="container">
      <h1>URl Shrinker</h1>
      <form
        action="/shortUrl"
        method="post"
        class="my-4"
        style="display: flex; gap: 20px; flex-wrap: wrap"
      >
        <label for="" class="visually-hidden">URL</label>
        <input required class="form-control mr-2" type="text" name="fullURL" />
        <button class="btn btn-success" type="submit">Shrink</button>
      </form>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Full URL</th>
              <th>Short URL</th>
              <th>Click</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach(url => { %>
            <tr>
              <td><a href="<%= url.full  %>"><%= url.full %></a></td>
              <td><a href="<%= url.short  %>"><%= url.short %></a></td>
              <td><%= url.clicks %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
